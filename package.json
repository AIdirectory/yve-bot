{
  "name": "yve-bot",
  "version": "1.0.0",
  "description": "Smart rule-based bot",
  "main": "lib/yve-bot.core.js",
  "repository": "https://github.com/andersonba/yve-bot",
  "author": "Anderson de Oliveira <andersonba@me.com>",
  "license": "MIT",
  "scripts": {
    "test": "nyc yarn test:strict",
    "test:strict": "jest",
    "test:watch": "yarn test:strict -- --watch",
    "clean": "rm -rf lib",
    "build": "webpack --bail",
    "watch": "webpack --watch --watch-poll"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.73",
    "@types/node": "^8.0.24",
    "awesome-typescript-loader": "^3.2.3",
    "faker": "^4.1.0",
    "istanbul": "^0.4.5",
    "jest": "^21.0.2",
    "lodash": "^4.17.4",
    "nyc": "^11.1.0",
    "string-template": "^1.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ],
    "moduleNameMapper": {
      "^@test/(.*)": "<rootDir>/test/$1"
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
}
