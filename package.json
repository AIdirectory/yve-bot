{
  "name": "yve-bot",
  "version": "1.0.0",
  "description": "Smart rule-based bot",
  "main": "lib/yve.core.js",
  "repository": "https://github.com/andersonba/yve-bot",
  "author": "Anderson de Oliveira <andersonba@me.com>",
  "license": "MIT",
  "scripts": {
