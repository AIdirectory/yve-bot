{
  "name": "yve-bot",
  "version": "1.0.0",
  "description": "A rule based Bot, but intelligent.",
  "main": "lib/index.js",
  "repository": "https://github.com/andersonba/yve-bot",
  "author": "Anderson de Oliveira <andersonba@me.com>",
  "license": "MIT",
  "scripts": {
    "test": "nyc yarn test:strict",
    "test:strict": "mocha --opts mocha.opts test/**/*.spec.js",
    "test:watch": "yarn test:strict -- -w",
    "clean": "rm -rf lib",
    "build-web": "babel src -d lib -s && webpack lib/core/index.js lib/index.js --output-library YveBot --output-library-target var"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "es6-promisify": "^5.0.0",
    "istanbul": "^0.4.5",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "string-template": "^1.0.0",
    "webpack": "^3.4.1"
  },
  "dependencies": {},
  "optionalDependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "js-yaml": "^3.9.1",
    "prompt": "^1.0.0",
    "socket.io": "^2.0.3",
    "watch-spawn": "^2.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
